    <style>
        #prediction-area img {
            max-width: 1000px; /* 최대 너비 */
            max-height: 600px; /* 최대 높이 */
            width: auto; /* 원본 비율을 유지하면서 너비 조절 */
            height: auto; /* 원본 비율을 유지하면서 높이 조절 */
            display: block; /* 블록 레벨 요소로 표시 */
            margin: 0 auto; /* 상하 마진 없이 좌우 마진으로 가운데 정렬 */
        }

        #loading {
            position: fixed; /* 고정된 위치 */
            top: 50%; /* 상단에서 50% */
            left: 50%; /* 왼쪽에서 50% */
            transform: translate(-50%, -50%); /* 중앙 정렬 */
            z-index: 1000; /* 다른 요소들 위에 표시 */
            display: none;
        }
        #go-to-predict {
            display: block; /* 블록 레벨 요소로 만듭니다 */
            width: fit-content; /* 컨텐츠의 너비에 맞게 조절합니다 */
            margin: 20px 20px 20px auto; /* 위, 우측, 아래 마진을 20px, 좌측 마진을 auto로 설정 */
        }
    </style>

